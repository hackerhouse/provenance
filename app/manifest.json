{
    "name": "__MSG_appName__",
    "version": "0.0.29",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "default_locale": "en",
    "browser_action": {
        "default_title": "__MSG_appName__",
        "default_icon": "imgs/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["js/content.js"],
        "run_at": "document_end"
      }
    ],
    "background": {
        "scripts": [
            "js/collector.js",
            "js/db.js",
            "js/background.js"
        ]
    },
    "chrome_url_overrides": {
        "history": "historyView/app/history.html"
    },
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
    "permissions": [
        "tabs",
        "history",
        "management",
        "webNavigation",
        "http://*/*",
        "unlimitedStorage",
        "https://*/*"
    ]
}
